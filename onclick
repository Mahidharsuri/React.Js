
import React, { useState } from 'react'

const Button =()=>{

    const  [name , setName] = useState("Mahidhar")
    

    return(
        <div>
            <center><h1>Welcome Dear !</h1>
            <h3>{name}</h3>
            <button onClick={()=> setName("Suri") }>Click Me 😁</button>
            </center>
        </div>
    );

}

export default Button

---------------------------------------------------------
import Button from "./Button";

const App = () =>{
  return(
    <>
    <Button/>
    </>
  );
}


export default App;
